{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "lib": ["ES2020"],
    "types": ["node", "express", "jsonwebtoken", "cors", "bcryptjs"],
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "@utils/*": ["utils/*"],
      "@routes/*": ["routes/*"],
      "@middlewares/*": ["middlewares/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
